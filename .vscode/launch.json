    "version": "0.2.0",
    "configurations": [
        {
            "name": "Attach to Server (Dev)",
            "port": 9229,
            "request": "attach",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "type": "node",
            "restart": true, // Automatically try to re-attach if nodemon restarts
            "sourceMaps": true,
            "localRoot": "${workspaceFolder}/server",
            "remoteRoot": "${workspaceFolder}/server",
            "cwd": "${workspaceFolder}/server"
        }
    ]
}